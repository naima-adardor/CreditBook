<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PDF_client">

    <LinearLayout
        android:id="@+id/PdfLayout"
        android:layout_width="match_parent"
        android:layout_height="632dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                app:srcCompat="@drawable/app_logo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_client"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:fontFamily="@font/alata"
                android:paddingLeft="30dp"
                android:text="Name Of Client :"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="189dp"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:fontFamily="@font/alata"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_client2"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:fontFamily="@font/alata"
                android:paddingLeft="30dp"
                android:text="Phone Number :"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/app"
                android:layout_width="202dp"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:fontFamily="@font/alata"
                android:hint=" "
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Email"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:fontFamily="@font/alata"
                android:paddingLeft="30dp"
                android:text="Email :"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/em"
                android:layout_width="225dp"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:fontFamily="@font/alata"
                android:hint=" "
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Adress"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:fontFamily="@font/alata"
                android:paddingLeft="30dp"
                android:text="Adress :"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/adre"
                android:layout_width="123dp"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:fontFamily="@font/alata"
                android:hint=" "
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:fontFamily="@font/alata"
                android:paddingLeft="30dp"
                android:text="Balance :"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/bal"
                android:layout_width="123dp"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:fontFamily="@font/alata"
                android:hint=" "
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <LinearLayout
                android:layout_width="202dp"
                android:layout_height="112dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:src="@drawable/cashin" />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alata"
                    android:gravity="center"
                    android:text="Cash in"
                    android:textAlignment="center"
                    android:textColor="#090909"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cashin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alata"
                    android:gravity="center"
                    android:text="00.00 MAD"
                    android:textAlignment="center"
                    android:textColor="#1AD321"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="186dp"
                android:layout_height="112dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:src="@drawable/cashout" />

                <TextView
                    android:id="@+id/balanceClient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alata"
                    android:gravity="center"
                    android:text="Cash out"
                    android:textAlignment="center"
                    android:textColor="#090909"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cashout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alata"
                    android:gravity="center"
                    android:text="00.00 MAD"
                    android:textAlignment="center"
                    android:textColor="#E30C0C"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="411dp"
        android:layout_height="100dp"
        android:layout_below="@+id/PdfLayout"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="11dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>

        <Button
            android:id="@+id/save"
            android:layout_width="246dp"
            android:layout_height="66dp"
            android:layout_marginTop="15dp"
            android:text="Download"
            android:textColorHint="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>