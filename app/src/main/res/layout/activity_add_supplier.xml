<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddClientActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/DarkBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/button_back"
            android:layout_width="51dp"
            android:layout_height="48dp"
            android:background="@drawable/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.043"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"

            android:text="Add Supplier"
            android:textColor="@color/Gray"
            android:textSize="20sp"

            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.68" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/importe_btn"

                android:layout_width="173dp"
                android:layout_height="48dp"
                android:background="@drawable/radius_button_client"
                android:fontFamily="monospace"
                android:padding="8dp"
                android:text=" Import Contact"
                android:textColor="@color/LightGray"
                android:textSize="16sp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="217dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="10dp"
                android:clickable="false"
                android:text="Import contacts from your phone "

                android:textColor="@color/Gray2"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <EditText
                android:id="@+id/editTextFirstName"

                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_centerVertical="false"

                android:background="@drawable/round_edit_text"
                android:drawableLeft="@drawable/client_supplier"
                android:ems="10"
                android:hint="   First Name"
                android:inputType="textPersonName"

                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextLastName"

                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_centerVertical="false"

                android:layout_marginTop="50dp"
                android:background="@drawable/round_edit_text"
                android:drawableLeft="@drawable/client_supplier"

                android:ems="10"
                android:hint="   Last Name"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextPhone"

                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                android:layout_marginTop="50dp"

                android:background="@drawable/round_edit_text"
                android:drawableLeft="@drawable/img_2"
                android:ems="10"
                android:hint="   Phone Number"
                android:inputType="phone"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextEmail"

                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                android:layout_marginTop="50dp"
                android:background="@drawable/round_edit_text"
                android:drawableLeft="@drawable/email"
                android:ems="10"
                android:hint="   Email"
                android:inputType="textEmailAddress"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextAdress"

                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                android:layout_marginTop="50dp"
                android:background="@drawable/round_edit_text"
                android:drawableLeft="@drawable/address"
                android:ems="10"
                android:hint="   Address"
                android:inputType="textPersonName"
                android:textSize="20sp" />

        </LinearLayout>

        <Button

            android:id="@+id/btnAddSupplier"
            android:layout_width="309dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"

            android:background="@drawable/round_button"

            android:fontFamily="monospace"
            android:minHeight="32dp"
            android:padding="8dp"
            android:text="Add Supplier"
            android:textColor="@color/LightGray"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>